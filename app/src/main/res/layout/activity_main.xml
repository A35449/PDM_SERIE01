<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.workstation.pdm_se01.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/txtMain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="26dp"
        android:id="@+id/imgView"
        android:layout_below="@+id/txtMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

   
    <EditText
        android:text="EditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/LocationInput"
        android:layout_below="@+id/txtMain"
        android:layout_centerHorizontal="true"
        android:hint="ex: London,uk" />

    <Button
        android:text="Get Forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GetWeather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/GetForecast" />

    <Button
        android:text="Get Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/GetWeather"
        android:layout_below="@+id/LocationInput"
        android:layout_alignRight="@+id/GetForecast"
        android:layout_alignEnd="@+id/GetForecast" />

    <Button
        android:text="about us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GetForecast"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:id="@+id/help" />
    <![CDATA[ />





    ]]>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/help"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/day_forecast_list" />
        
</RelativeLayout>
